@model BlogProject_Http5112.Models.Author

@{
    ViewBag.Title = "DeleteConfirm";
}


<div id="containershow">
    <nav>
        <a id="navlink" href="/Author/Show/@Model.Authorid">Cancel</a>
    </nav>

    <h2>Are you sure you want to delete @Model.AuthorFname @Model.AuthorLname</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Author/Delete/@Model.Authorid">
       
        <button id="navlink" style="display:block; margin:0 auto; background:red; color:white; border:3px solid black; border-radius:3px;" href="">Confirm Delete</button>
    </form>
</div>




